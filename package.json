{
  "name": "yt-captions-downloader-mcp",
  "version": "0.3.6",
  "description": "API for downloading subtitles from YouTube videos",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp.js",
    "start:mcp:http": "node dist/mcp-http.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:mcp": "ts-node-dev --respawn --transpile-only src/mcp.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e:api": "node dist/e2e/api-smoke.js"
  },
  "keywords": [
    "youtube",
    "subtitles",
    "captions",
    "api"
  ],
  "author": "samson-art",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samson-art/yt-captions-downloader.git"
  },
  "homepage": "https://github.com/samson-art/yt-captions-downloader#readme",
  "bugs": {
    "url": "https://github.com/samson-art/yt-captions-downloader/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sinclair/typebox": "^0.34.45",
    "fastify": "^5.7.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.1"
  }
}
